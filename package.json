{
  "name": "tailwind-blog",
  "version": "1.0.0",
  "description": "A Blazor blog application using TailwindCSS v4",
  "scripts": {
    "build:css": "tailwindcss -i ./src/Web/wwwroot/app.css -o ./src/Web/wwwroot/dist/app.css --watch",
    "build:css:prod": "tailwindcss -i ./src/Web/wwwroot/app.css -o ./src/Web/wwwroot/dist/app.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0-alpha.30"
  }
}